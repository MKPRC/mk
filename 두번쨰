    <button class="option" onclick="nextQuestion()">조금 어려움</button>
  </div>

  <script>
    let current = 1;

    function nextQuestion() {
      current++;
      if (current > 5) {
        window.location.href = "flowresult.html";
      } else {
        document.querySelector('.question').innerText = `Q${current}. 최근 가장 자주 하는 생각은?`;
      }
    }
  </script>
